@model IEnumerable<CarManager.Core.PaymentPlugin>
@{
    ViewBag.Title = "Index";
}

<h2>订单支付</h2>
<form action="/Payment/Index" method="post">
    <table>
        <tr>
            <td>支付金额:</td>
            <td><input type="number" id="amount" name="amount" value="20" /></td>
        </tr>
        <tr>
            <td>支付方式:</td>
            @foreach (var item in Model)
            {
                <td>
                    <input type="radio" name="PluginName" value="@item.PluginDescription.PluginName" />@item.PluginDescription.PluginName
                </td>
            }
        </tr>
        <tr>
            <td>
                <input type="submit" name="BtnSave" value="提交支付" />
            </td>
        </tr>
    </table>
</form>